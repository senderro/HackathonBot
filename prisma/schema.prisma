generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            BigInt       @id
  username      String?
  first_name    String?
  last_name     String?
  created_at    DateTime     @default(now())
  aliases       UserAlias[]
  bags_admin    Bag[]        @relation("AdminOf")     // apenas a relação
  bags          BagUser[]

  @@map("users")
}

model UserAlias {
  id       Int     @id @default(autoincrement())
  user     User    @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id  BigInt
  alias    String

  @@map("user_aliases")
}

model Bag {
  id                  Int        @id @default(autoincrement())
  chat_id             BigInt     @unique
  name                String
  admin               User       @relation("AdminOf", fields: [admin_user_id], references: [id])
  admin_user_id       BigInt
  created_at          DateTime   @default(now())
  welcome_message_id  BigInt?
  participants        BagUser[]

  @@map("bags")
}

model BagUser {
  bag          Bag      @relation(fields: [bag_id], references: [id], onDelete: Cascade)
  bag_id       Int
  user         User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id      BigInt
  joined_at    DateTime @default(now())

  @@id([bag_id, user_id])
  @@map("bag_users")
}
